 */

$option = $block->getData('option');
$product = $block->getData('product');
$optionsViewModel = $block->getData('options_view_model');

$optionId = $option->getOptionId();
$colorsData = $optionsViewModel->getWireColorsWithHex($option);
?>

<div class="thread-color-selector"
     x-data="{
         selectedColor: null,
         selectedColorName: '',
         selectedColorHex: '',
         isModalOpen: false,
         selectColor(id, name, hex, price) {
             this.selectedColor = id;
             this.selectedColorName = name;
             this.selectedColorHex = hex;
             this.isModalOpen = false;
             // Update hidden input
             document.querySelector('input[name=\'options[<?= (int)$optionId ?>]\']').value = id;
             // Dispatch event for parent component
             this.$dispatch('option-selected', {
                 optionId: <?= (int)$optionId ?>,
                 valueId: id,
                 price: price
             });
         }
     }">

    <!-- Hidden input for form submission -->
    <input type="hidden"
           name="options[<?= $escaper->escapeHtmlAttr($optionId) ?>]"
           x-model="selectedColor"
           <?= $option->getIsRequire() ? 'required' : '' ?>>

    <!-- Select Button -->
    <button type="button"
            class="thread-select-btn"
            @click="isModalOpen = true">
        <span x-show="!selectedColor"><?= $escaper->escapeHtml(__('SELECT')) ?></span>
        <span x-show="selectedColor" class="selected-preview">
            <span class="color-dash" :style="'background-color: ' + selectedColorHex"></span>
            <span class="color-name-text" x-text="selectedColorName"></span>
        </span>
    </button>

    <!-- Modal Overlay -->
    <div class="color-modal-overlay"
         x-show="isModalOpen"
         x-transition:enter="transition ease-out duration-200"
         x-transition:enter-start="opacity-0"
         x-transition:enter-end="opacity-100"
         x-transition:leave="transition ease-in duration-150"
         x-transition:leave-start="opacity-100"
         x-transition:leave-end="opacity-0"
         @click="isModalOpen = false"
         style="display: none;">
    </div>

    <!-- Modal Content -->
    <div class="color-modal"
         x-show="isModalOpen"
         x-transition:enter="transition ease-out duration-200"
         x-transition:enter-start="opacity-0 transform scale-95"
         x-transition:enter-end="opacity-100 transform scale-100"
         x-transition:leave="transition ease-in duration-150"
         x-transition:leave-start="opacity-100 transform scale-100"
         x-transition:leave-end="opacity-0 transform scale-95"
         @click.away="isModalOpen = false"
         style="display: none;">

        <!-- Modal Header -->
        <div class="modal-header">
            <h3 class="modal-title"><?= $escaper->escapeHtml(__('THREAD COLOR')) ?></h3>
            <button type="button" class="modal-close" @click="isModalOpen = false">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        </div>

        <!-- Color Grid -->
        <div class="color-grid">
            <?php foreach ($colorsData as $color): ?>
                <?php
                $colorId = $color['id'];
                $colorName = $color['name'];
                $colorHex = $color['hex'];
                $price = $color['price'];
                ?>
                <div class="color-item"
                     @click="selectColor('<?= $escaper->escapeJs($colorId) ?>', '<?= $escaper->escapeJs($colorName) ?>', '<?= $escaper->escapeJs($colorHex) ?>', <?= (float)$price ?>)"
                     :class="{ 'selected': selectedColor === '<?= $escaper->escapeJs($colorId) ?>' }"
                     title="<?= $escaper->escapeHtmlAttr($colorName) ?>">
                    <span class="color-dash" style="background-color: <?= $escaper->escapeHtmlAttr($colorHex) ?>;"></span>
                </div>
            <?php endforeach; ?>
        </div>
    </div>
