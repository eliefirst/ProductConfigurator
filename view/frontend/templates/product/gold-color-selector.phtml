<?php
/**
 * ElielWeb ProductConfigurator - Gold Color Selector Template (Hyva)
 *
 * Displays gold color swatches for product variants
 *
 * @var $block \Magento\Framework\View\Element\Template
 * @var \ElielWeb\ProductConfigurator\ViewModel\GoldColorSelector $goldColorViewModel
 * @var \Magento\Catalog\Api\Data\ProductInterface $product
 */

// Get product from registry
$registry = $block->getData('product');
$product = $registry instanceof \Magento\Framework\Registry
    ? $registry->registry('current_product')
    : $block->getData('product');

$goldColorViewModel = $block->getData('gold_color_view_model');

if (!$product || !$goldColorViewModel || !$goldColorViewModel->hasGoldVariants($product)) {
    return;
}

$variants = $goldColorViewModel->getGoldVariants($product);
$currentGoldColor = $goldColorViewModel->getCurrentGoldColor($product);

if (empty($variants) || count($variants) < 2) {
    return; // Don't show selector if there's only one variant
}
?>

<div class="gold-color-selector product-option-section" x-data="{ selectedColor: '<?= $escaper->escapeJs($currentGoldColor) ?>' }">
    <div class="option-header">
        <h3 class="option-title"><?= $escaper->escapeHtml(__('Couleur d\'Or')) ?></h3>
        <span class="selected-color-label" x-text="selectedColor"></span>
    </div>

    <div class="gold-swatches">
        <?php foreach ($variants as $variant): ?>
            <?php
            $isCurrent = $variant['is_current'];
            $goldColor = $variant['gold_color'];
            $hexCode = $variant['hex_code'];
            $url = $variant['url'];
            $label = $variant['label_fr']; // Use French label by default, can be made dynamic based on store
            $isWhite = ($variant['gold_color_code'] === 'white');
            ?>

            <a href="<?= $escaper->escapeUrl($url) ?>"
               class="gold-swatch-link <?= $isCurrent ? 'active' : '' ?>"
               data-color="<?= $escaper->escapeHtmlAttr($goldColor) ?>"
               data-sku="<?= $escaper->escapeHtmlAttr($variant['sku']) ?>"
               title="<?= $escaper->escapeHtmlAttr($label) ?>"
               @click="selectedColor = '<?= $escaper->escapeJs($goldColor) ?>'"
               <?= $isCurrent ? 'aria-current="true"' : '' ?>>

                <div class="gold-swatch <?= $isWhite ? 'light-swatch' : '' ?>"
                     style="background-color: <?= $escaper->escapeHtmlAttr($hexCode) ?>;">

                    <?php if ($isCurrent): ?>
                        <!-- Checkmark for current selection -->
                        <svg class="check-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
                            <polyline points="20 6 9 17 4 12"></polyline>
                        </svg>
                    <?php endif; ?>
                </div>

                <span class="swatch-label"><?= $escaper->escapeHtml($label) ?></span>
            </a>
        <?php endforeach; ?>
    </div>
</div>

